/**
 * ----------------------------------------------------------------------------------------------
 * Custom Gallery Page Code
 * ----------------------------------------------------------------------------------------------
 */


.gallery-container {
  margin-top: 50px;
  margin-bottom: 70px;
  text-align: center;
}

.gallery__item {
    padding: 50px 0;
}



.ImageHero__Image.galleryImage {
  background-size: contain;
  background-repeat: no-repeat;
  background-color: #fff;
}

.ImageHero.ImageHero--large.galleryImage {
  margin: auto;
  overflow: visible;
  
  &.one-third {
    width: 33%;
  }
  &.one-half {
    width: 50%;
  }
  &.two-thirds {
    width: 66%;
  }
}

.ImageHero__Block {
  &.top-right {
    transform: translate($right, $up);
  }
  &.top-center {
    transform: translate($center, $up);
  }  
  &.top-left {
    transform: translate($left, $up);
  }
  &.middle-right {
    transform: translate($right, $center);
  }
  &.middle-center {
    transform: translate($center, $center);
  }
  &.middle-left {
    transform: translate($left, $center);
  }
  &.bottom-right {
    transform: translate($right, $down);
  }
  &.bottom-center {
    transform: translate($center, $down);
  }
  &.bottom-left {
    transform: translate($left, $down);
  }
}

