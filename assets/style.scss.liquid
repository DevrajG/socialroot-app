.popup {
  width: 100%;
  height: 100%;
  display: none;
  position: fixed;
  top: 0px;
  left: 0px;
  background: rgba(0,0,0,0.75);
  z-index: 21;
  justify-content: center;
  align-items: center;
  transition: opacity .25s ease-in-out;
  -moz-transition: opacity .25s ease-in-out;
  -webkit-transition: opacity .25s ease-in-out;

  .popup-inner {
    max-width: 900px;
    width: 100%;
    padding: 30px 25px;
    position: fixed;
    background: #fff;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    max-height: calc(100% - 50px);

    .popup-close {
      width: 30px;
      height: 30px;
      padding-top: 4px;
      display: inline-block;
      position: absolute;
      top: 15px;
      right: 15px;
      transition: ease 0.25s all;
      -webkit-transform: translate(50%, -50%);
      transform: translate(50%, -50%);
      background: #000;
      font-family: Arial, Sans-Serif;
      font-size: 20px;
      text-align: center;
      line-height: 100%;
      color: #fff;
    }

    .color_gallery_new.sola_wood_colors {
      height: 100%;
      overflow: hidden;
      scrollbar-width: none;

      .row {
        margin: 0;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
      }

      .thumb {
        width: 20%;
        padding: 0px 5px 15px;

        @media (max-width: 600px) {
          width: 33%;
        }
      }

      h2 {
        font-size: 14px;
        margin-top: 10px;
        text-align: center;
        letter-spacing: 1px;
        text-transform: capitalize;
        font-weight: 600;
        line-height: 1.2;
      }
    }
  }
}

