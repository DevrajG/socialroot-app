.bold_options {
  .bold_option_set {
    margin: 0px;
  }

  .bold_option {
    .bold_option_value_element {
      margin-right: 0;

      &:hover {
        cursor: pointer;
      }
    }

    > label {
      display: block;
      margin-bottom: 10px;
    }

    .bold_option_title {
      padding-bottom: 8px;
      display: inline-block;
      font-weight: inherit;
    }    

    .bold_option_element {
      margin-left: 0px;

      select {
        width: 100%;
        height: 45px;
        padding-left: 14px;
        padding-right: 28px;
        border: 1px solid #dfe0e1;
        background: #fff;
        -webkit-appearance: none;
        -moz-appearance: none;
        display: inline-block;
        color: inherit;
        cursor: pointer;
        border-radius: 0;
        line-height: normal;
      }
    }

    &.bold_option_dropdown {
      .bold_option_element {
        position: relative;
      }

      .bold_option_element::after {
        content: ' ';
        background: url({{ 'dropdown-icon.png' }}) no-repeat;
        width: 10px;
        height: 8px;
        position: absolute;
        right: 14px;
        top: calc(50% - 4px);
      }
    }
  }
}



